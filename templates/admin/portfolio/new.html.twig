{% extends 'admin/layout.html.twig' %}

{% block title %}Admin panel | New project{% endblock %}

{% block content %}
    <div class="admin-content">
        <div class="admin-content__inner">
            <div class="admin-content__divided">
                <h1 class="admin-content__title">NEW PROJECT</h1>
                {{ form_start(form, { 'attr': { 'class': 'admin-content__form' } }) }}
                    <div class="admin-content__form-row">
                        {{ form_label(form.name, '', { 'label_attr': { 'class': 'admin-content__form-label' } }) }}
                        {{ form_widget(form.name, { 'attr': { 'class': 'admin-content__form-text' } }) }}
                    </div>
                    <div class="admin-content__form-row">
                        {{ form_label(form.cover, '', { 'label_attr': { 'class': 'admin-content__form-label' } }) }}
                        <label class="admin-content__form-label-file" for="portfolio_cover">
                            <svg class="admin-content__form-label-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512">
                                <path d="M369.9 97.98L286.02 14.1c-9-9-21.2-14.1-33.89-14.1H47.99C21.5.1 0 21.6 0 48.09v415.92C0 490.5 21.5 512 47.99 512h288.02c26.49 0 47.99-21.5 47.99-47.99V131.97c0-12.69-5.1-24.99-14.1-33.99zM256.03 32.59c2.8.7 5.3 2.1 7.4 4.2l83.88 83.88c2.1 2.1 3.5 4.6 4.2 7.4h-95.48V32.59zm95.98 431.42c0 8.8-7.2 16-16 16H47.99c-8.8 0-16-7.2-16-16V48.09c0-8.8 7.2-16.09 16-16.09h176.04v104.07c0 13.3 10.7 23.93 24 23.93h103.98v304.01zm-180.1-247.32l-68.12 71.75c-7.81 8.2-9.94 20.31-5.44 30.83 4.41 10.31 14 16.72 25 16.72H176V424c0 4.42 3.58 8 8 8h16c4.42 0 8-3.58 8-8v-88.02h52.66c11 0 20.59-6.41 25-16.72 4.5-10.52 2.38-22.62-5.44-30.81l-68.12-71.78c-10.69-11.19-29.51-11.2-40.19.02zm-38.75 87.29l58.84-62 58.84 62H133.16z"/>
                            </svg>
                            <span class="admin-content__form-label-text">Upload project</span>
                            {{ form_widget(form.cover, { 'attr': { 'class': 'admin-content__form-file' } }) }}
                        </label>
                    </div>
                    <div class="admin-content__form-row">
                        {{ form_widget(form.save, { 'attr': { 'class': 'admin-content__form-button' } }) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}