{{ form_start(form, { 'attr': { 'class': 'admin-content__form' } }) }}
    <div class="admin-content__form-row">
        {{ form_label(form.name, '', { 'label_attr': { 'class': 'admin-content__form-label' } }) }}
        <div class="admin-content__form-layout">
            {{ form_widget(form.name, { 'attr': { 'class': 'admin-content__form-text ' ~ (form.name.vars.valid ? 'admin-content__form-text--default' : 'admin-content__form-text--error') } }) }}
            <div class="admin-content__form-errors">
                {{ form_errors(form.name) }}
            </div>
        </div>
    </div>
    <div class="admin-content__form-row">
        {{ form_label(form.cover, '', { 'label_attr': { 'class': 'admin-content__form-label' } }) }}
        <div class="admin-content__form-layout">
            <label class="admin-content__form-label-file" for="portfolio_cover">
                <svg class="admin-content__form-label-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512">
