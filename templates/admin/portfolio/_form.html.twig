                <span class="admin-content__form-label-text">Upload project</span>
                {{ form_widget(form.cover, { 'attr': { 'class': 'admin-content__form-file' } }) }}
            </label>
            <div class="admin-content__form-errors">
                {{ form_errors(form.cover) }}
            </div>
        </div>
    </div>
    <div class="admin-content__form-row">
        {{ form_widget(form.save, { 'attr': { 'class': 'admin-content__form-button' } }) }}
    </div>
{{ form_end(form) }}